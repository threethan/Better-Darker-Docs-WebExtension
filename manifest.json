{
  "manifest_version": 2,
  "name": "Better Darker Docs",
  "author": "Ethan Medeiros",
  "version": "1.1.0",
  "description": "Gives Google Docs, Sheets, Slides, and Drawings a proper dark mode - based on system theme, and clearer text",
  "icons": {
    "48": "icon-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://docs.google.com/*"
      ],
      "run_at": "document_start",
      "css": [
        "dark.css"
      ],
      "js": [
        "options-manager.js"
      ]
    },
    {
      "matches": [
        "*://docs.google.com/document*"
      ],
      "js": [
        "docs.js"
      ],
      "run_at": "document_start",
      "css": [
        "dark-docs.css"
      ]
    },
    {
      "matches": [
        "*://docs.google.com/spreadsheet*"
      ],
      "js": [
        "sheets.js"
      ],
      "run_at": "document_start",
      "css": [
        "dark-sheets.css"
      ]
    },
    {
      "matches": [
        "*://docs.google.com/presentation*"
      ],
      "css": [
        "dark-slides.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "options.html"
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "batterdarkerdocs@threethan.github.io",
      "strict_min_version": "42.0"
    }
  }
}